FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Build TypeScript
RUN npm run build

# Copy views and public to dist (EJS templates are not compiled by tsc)
RUN cp -r src/views dist/ && cp -r public dist/

EXPOSE 3000

CMD ["node", "dist/index.js"]
